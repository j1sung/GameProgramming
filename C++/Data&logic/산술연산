#include <iostream>
using namespace std;

int a;
int b;

unsigned int hp; //shift 연산시 최상위 비트에서 -를 표현하는데 오른쪽으로 땡길 시 100...에서 0100... 이 아니라 1100...이 되므로 이 부분에서 오류가 생길 수 있다.
                //이를 막기위해 unsigned로 애초에 양수로만 선언해서 오류를 방지할 수 있다.

int main(){
    
    // + - * / %
    
    a = 10;
    b = 3;

    cout << (a + b) << endl; // visual studio에서 alt를 누른상태로 밑으로 마우스 드래그를 하면 여러줄 한번에 코드작성이 가능!
    cout << (a - b) << endl;
    cout << (a * b) << endl;
    cout << (a / b) << endl;
    cout << (a % b) << endl;

    hp = 100;
    hp = hp + 5;
    hp += 5;

    hp = hp - 5;
    hp -= 5;

    hp = hp * 2;
    hp *= 2;

    hp = hp / 2;
    hp /= 2;

    hp = hp % 2;
    hp %= 2;

    hp = hp + 1;
    hp += 1;

    hp++; //앞 연산 다 끝내고 1 증가
    ++hp; //우선 1증가 후 나머지 연산(우선순위가 빠름)

    cout << (100 * 2 + 5 / 2); // 우선순위는 앞에서 뒤로 계산되면서 */ > +- 순이다.
}
